{
  "name": "@lewinnovation/asana-update-summarizer",
  "version": "1.0.0",
  "description": "A command-line tool to help you generate a summary of your work from Asana.",
  "main": "dist/index.js",
  "bin": {
    "asana-update-summarizer": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "start": "node dist/index.js",
    "build": "esbuild index.tsx --bundle --platform=node --outfile=dist/index.js --format=esm --external:react --external:ink --external:clipboardy --external:ink-table --jsx=automatic",
    "prepublishOnly": "pnpm run build",
    "dev": "tsx index.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lewinnovation/asana-update-summarizer.git"
  },
  "keywords": [
    "asana",
    "cli"
  ],
  "author": "Vidur Butalia <vidurbutalia@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lewinnovation/asana-update-summarizer/issues"
  },
  "homepage": "https://github.com/lewinnovation/asana-update-summarizer#readme",
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "esbuild": "^0.25.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@inkjs/ui": "^2.0.0",
    "@types/react": "^19.2.2",
    "clipboardy": "^5.0.0",
    "ink": "^6.3.1",
    "ink-table": "github:brainhubeu/ink-table",
    "openapi-fetch": "^0.14.1",
    "openapi-typescript": "^7.9.1",
    "react": "^19.2.0"
  }
}
